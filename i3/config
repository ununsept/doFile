set $mod Mod4
font pango:monospace 10
floating_modifier $mod

bindsym $mod+Return       exec i3-sensible-terminal
bindsym $mod+Shift+Return exec xfce4-terminal -x ranger

bindsym $mod+a               exec xfce4-terminal -x ranger
bindsym $mod+Shift+a         kill
bindsym $mod+s               exec ~/.i3script/browser
bindsym $mod+Shift+s         exec ~/.i3script/browserNewWindo
bindsym $mod+d               exec rofi -show drun
bindsym $mod+Shift+d         exec rofi -show window
bindsym $mod+g               exec pkill compton && compton --config ~/.config/compton.conf
bindsym $mod+Shift+g         exec pkill compton && compton --config ~/.config/compton0.conf
bindsym $mod+x               exec i3lock -c 000000
bindsym $mod+Shift+x         exec ~/.i3script/shutdownMenu
bindsym $mod+c               mode "resize"
bindsym $mod+Shift+c         restart

bindsym $mod+period          exec pactl set-sink-volume @DEFAULT_SINK@ +1%
bindsym $mod+comma           exec pactl set-sink-volume @DEFAULT_SINK@ -1%
bindsym $mod+m               exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym $mod+Shift+m         exec mpc toggle
bindsym $mod+Shift+comma     exec mpc prev
bindsym $mod+Shift+period    exec mpc next

# media keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +1%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -1%
bindsym XF86AudioMute        exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioPlay        exec mpc toggle
bindsym XF86AudioStop       exec mpc stop
bindsym XF86AudioPrev        exec mpc prev
bindsym XF86AudioNext        exec mpc next

# mov and focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# windows mode
bindsym $mod+Shift+v split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace 01
bindsym $mod+2 workspace 02
bindsym $mod+3 workspace 03
bindsym $mod+4 workspace 04
bindsym $mod+5 workspace 05
bindsym $mod+6 workspace 06
bindsym $mod+7 workspace 07
bindsym $mod+8 workspace 08
bindsym $mod+9 workspace 09
bindsym $mod+0 workspace 10
bindsym $mod+q workspace 11
bindsym $mod+w workspace 12
bindsym $mod+e workspace 13
bindsym $mod+r workspace 14
bindsym $mod+t workspace 15
bindsym $mod+y workspace 16
bindsym $mod+u workspace 17
bindsym $mod+i workspace 18
bindsym $mod+o workspace 19
bindsym $mod+p workspace 20

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 01
bindsym $mod+Shift+2 move container to workspace 02
bindsym $mod+Shift+3 move container to workspace 03
bindsym $mod+Shift+4 move container to workspace 04
bindsym $mod+Shift+5 move container to workspace 05
bindsym $mod+Shift+6 move container to workspace 06
bindsym $mod+Shift+7 move container to workspace 07
bindsym $mod+Shift+8 move container to workspace 08
bindsym $mod+Shift+9 move container to workspace 09
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+q move container to workspace 11
bindsym $mod+Shift+w move container to workspace 12
bindsym $mod+Shift+e move container to workspace 13
bindsym $mod+Shift+r move container to workspace 14
bindsym $mod+Shift+t move container to workspace 15
bindsym $mod+Shift+y move container to workspace 16
bindsym $mod+Shift+u move container to workspace 17
bindsym $mod+Shift+i move container to workspace 18
bindsym $mod+Shift+o move container to workspace 19
bindsym $mod+Shift+p move container to workspace 20

mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    
    bindsym comma gaps inner all plus 5
    bindsym period gaps inner all minus 5
    bindsym m gaps inner all set 0
    bindsym n gaps inner all set 10
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

client.focused          #000000AA #000000AA #FFFFFF #000000AA
client.unfocused        #000000AA #000000AA #FFFFFF #000000AA
client.focused_inactive #000000AA #000000AA #FFFFFF #000000AA
client.urgent           #000000AA #000000AA #FFFFFF #000000AA

for_window [class="^.*"] border pixel 3
gaps inner 10
gaps outer 0

hide_edge_borders both

bar {
    colors {
        background #000000AA
        statusline #FFFFFFAA
	separator  #FFFFFF
        focused_workspace  #FFFFFF   #FFFFFF    #000000
        inactive_workspace #000000AA #000000AA  #FFFFFF
        active_workspace   #000000AA #000000AA  #FFFFFF
        urgent_workspace   #FF4400   #FF4400    #000000
    }
    status_command i3blocks -c ~/.config/i3/i3blocks.conf 
    i3bar_command  i3bar -t
    tray_output none
}


# start compositor (opasyti)
exec compton --config ~/.config/compton.conf
# start heding mouse cursor
exec unclutter -idle 1
# set wallpaper
exec feh --bg-tile ./.wallpaper
